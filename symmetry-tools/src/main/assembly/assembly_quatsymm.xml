<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>quatsymm_bundle</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<files>
		<file>
			<source>${project.basedir}/src/main/assembly/LICENSE</source>
			<outputDirectory>.</outputDirectory>
		</file>
		<file>
			<source>${project.build.directory}/QuatSymm-${version}.jar</source>
			<outputDirectory>.</outputDirectory>
			<destName>quatsymm-${version}.jar</destName>
		</file>
		<file>
			<source>src/main/assembly/runQuatSymm.sh</source>
			<outputDirectory>.</outputDirectory>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>docs/QuatSymm.md</source>
			<destName>README.md</destName>
			<outputDirectory>.</outputDirectory>
		</file>
	</files>
</assembly>